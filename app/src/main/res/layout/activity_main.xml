<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:orientation="vertical"
    >
    <TextView

        android:id="@+id/tv1"
        android:background="#ff030007"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center"
        android:textColorHint="#ffffff"
        android:textColor="#FFFFFF"
        android:hint="Enter an Expression"
        android:layout_gravity="center"/>
    <LinearLayout
        android:paddingLeft="25dp"

        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:orientation="horizontal">

        <Button
            android:background="#ff580dff"
            android:id="@+id/aclear"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:text="C"
            android:textSize="43dp"/>
        <Button
            android:background="#ff030007"
            android:textColor="#FFFFFF"
            android:id="@+id/apara"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:text="()"
            android:textSize="43dp"/>
        <Button
            android:background="#ff030007"
            android:textColor="#FFFFFF"
            android:id="@+id/aboth"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:text="+/-"
            android:textSize="43dp"/>

        <Button
            android:background="#ff030007"
            android:textColor="#FFFFFF"

            android:id="@+id/acut"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:text="CE"
            android:textSize="43dp"/>






    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:paddingLeft="25dp">
        <Button
            android:id="@+id/a7"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:text="7"
            android:textSize="50sp"/>

        <Button
            android:id="@+id/a8"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:text="8"
            android:textSize="50sp"/>
        <Button
            android:id="@+id/a9"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:text="9"
            android:textSize="50sp"/>
        <Button
            android:background="#ff030007"
            android:textColor="#FFFFFF"
            android:id="@+id/aadd"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:text="+"
            android:textSize="50sp"/>



    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:paddingLeft="25dp">
        <Button
            android:id="@+id/a4"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:text="4"
            android:textSize="50sp"/>

        <Button
            android:id="@+id/a5"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:text="5"
            android:textSize="50sp"/>
        <Button
            android:id="@+id/a6"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:text="6"
            android:textSize="50sp"/>
            <Button
            android:background="#ff030007"
            android:textColor="#FFFFFF"
            android:id="@+id/amulti"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:text="*"
            android:textSize="50sp"/>




    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:paddingLeft="25dp"
        >
        <Button
            android:id="@+id/a1"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:text="1"
            android:textSize="50sp"/>

        <Button
            android:id="@+id/a2"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:text="2"
            android:textSize="50sp"/>

        <Button
            android:id="@+id/a3"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:text="3"
            android:textSize="50sp"/>



        <Button
            android:background="#ff030007"
            android:textColor="#FFFFFF"
            android:id="@+id/asub"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:text="-"
            android:textSize="50sp"/>

</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:paddingLeft="25dp">

        <Button
            android:id="@+id/a."
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:text="."
            android:textSize="50sp"/>
        <Button
            android:id="@+id/a0"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:text="0"
            android:textSize="50sp"/>
        <Button
            android:id="@+id/adiv"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:text="/"
            android:textSize="50sp"/>
        <Button
            android:background="#ff4fff24"
            android:id="@+id/aequ"
            android:layout_width="75dp"
            android:layout_height="68dp"
            android:text="="
            android:layout_gravity="center"
            android:textSize="30sp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp">

    </LinearLayout>
    </LinearLayout>
